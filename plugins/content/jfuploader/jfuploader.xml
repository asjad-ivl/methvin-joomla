<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="content" method="upgrade">
  <name>PLG_CONTENT_JFUPLOADER</name>
  <creationDate>August 2017</creationDate>
  <author>Michael Dempfle</author>
  <copyright>This plugin is freeeware</copyright>
  <authorEmail>jfu@mdempfle.de</authorEmail>
  <authorUrl>jfu.tinywebgallery.com</authorUrl>
  <version>3.2.5</version>
  <license>GNU GPL</license>
  <description>PLG_CONTENT_JFUPLOADER_XML_DESCRIPTION</description>
  <scriptfile>jfuploader.scriptfile.php</scriptfile>
  <files>
    <filename plugin="jfuploader">jfuploader.php</filename>
    <filename>readme.txt</filename>
    <filename>license.txt</filename>
    <filename>index.html</filename>
  </files>
   <updateservers>
      <server type="plugin" name="JFUploader plugin update site">http://www.tinywebgallery.com/update/plg_jfuploader/extension.xml</server>
   </updateservers>
   <languages folder="language">
  		<!--
  			these files will be installed in the administrator/language folder.
  		-->
  		<language tag="en-GB">en-GB/en-GB.plg_content_jfuploader.ini</language>
  		<language tag="en-GB">en-GB/en-GB.plg_content_jfuploader.sys.ini</language>
  		<language tag="de-DE">de-DE/de-DE.plg_content_jfuploader.ini</language>
  		<language tag="de-DE">de-DE/de-DE.plg_content_jfuploader.sys.ini</language>
	</languages>
   <config>
		<fields name="params">
		  <fieldset name="basic"> 
              <!-- params what to show. -->
              <field name="allow_dir_parameter" type="radio" class="btn-group" default="0" label="PLG_JFU_ALLOW_DIR_PARAMETER" description="PLG_JFU_ALLOW_DIR_PARAMETER_DESC">
                  <option value="1">E_S_YES</option>
                  <option value="0">E_S_NO</option>
              </field>
              <field name="autocreate_dir" type="radio" class="btn-group" default="0" label="PLG_JFU_AUTOCREATE_DIR" description="PLG_JFU_AUTOCREATE_DIR_DESC">
                  <option value="1">E_S_YES</option>
                  <option value="0">E_S_NO</option>
              </field>       
		  </fieldset>
		</fields>
	</config>
</extension>